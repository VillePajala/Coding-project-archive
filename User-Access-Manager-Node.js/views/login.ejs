<%- include("includes/header"); -%>

        <div id="ylatunniste" class="container">
            <h1 class="mb-2">UUTISPALVELU.FI</h1> 
        </div>

        <div id="sisalto2" class="container mb-4">
            <form class="form-signin" method="POST" action="/login/">
                
                <h4 class="mb-3">Kirjaudu sisään palveluun</h4>
                <label for="tunnus" class="sr-only ">Käyttäjätunnus</label>
                <input type="text" id="tunnus" name="tunnus" class="form-control mb-2" placeholder="Kirjoita tunnus..." autofocus>
                <label for="salasana" class="sr-only">Salasana</label>
                <input type="password" id="salasana" name="salasana" class="form-control" placeholder="Kirjoita salasana...">
                
                <div id="napit" class="container">
                    <label for="remember">Muista minut &nbsp</label>
                    <input type="checkbox" id="remember" name="remember" value="1" />
                </div>

                <input type="submit" class="btn btn-lg btn-primary btn-block mb-2" value="Kirjaudu">
                <a href="/" class="btn btn-secondary btn-lg btn-block mb-4">Peruuta</a>

                <div id="napit" class="container">
                    <a href="/rekisteroidy/" class="btn btn-primary btn-lg btn-sm mb-4">Rekisteröidy</a>
                </div>

                <% if (virhe) { %>
                    <div class="alert alert-danger">
                        <%=virhe%>
                    </div>    
                <% } %>

            </form>
        </div>
    </div>

    <%- include("includes/footer"); -%>



