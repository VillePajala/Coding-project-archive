<%- include("includes/header"); -%>

            <% let aika2 = new Date(keskustelu.aikaleima); %>

            <div class="container" id="otsikko2">
                <h2 class="mb-3"><%= keskustelu.otsikko %></h2>
                <hr>
                <h4 class="mb-3">Kirjoittaja: <%- keskustelu.kirjoittaja %></h4> 
                <hr>
                <p class="mb-3"><%- keskustelu.sisalto %></p>
                <hr>
                <h6 id="aikaleima"><i><%=aika2.getDate()%>.<%=aika2.getMonth()+1%>.<%=aika2.getFullYear()%> klo 
                    <%=aika2.getHours()%>:<%=(aika2.getMinutes() < 10 ? "0" : '' ) + aika2.getMinutes() %></i></h6>
            </div>   

            <br>

            <% for (var i = 0; i < viestit.length; i++) { 
                let aika = new Date(viestit[i].aikaleima); %>

                <div class="container mb-2" id="viestit">
                    <h4><%=viestit[i].kirjoittaja %></h4>
                    <p id="kommentti"><%-viestit[i].viesti%></p>
                    <h6 id="aikaleima"><i><%=aika.getDate()%>.<%=aika.getMonth()+1%>.<%=aika.getFullYear()%> klo 
                        <%=aika.getHours()%>:<%=(aika.getMinutes() < 10 ? "0" : '' ) + aika.getMinutes() %></i></h6>
                </div
            <% }; %>

            <div class="container" id="viestit">
                <form method="POST" action="/tallennaviesti/">
                    <label for="nimi"><h4>Nimi:</h4></label>
                    <input type="text" name="nimi" id="nimi" class="form-control"><br><br>
                    <label for="kirjoitus"><h4>Vastaus:</h4></label>
                    <textarea name="kirjoitus" id="kirjoitus" class="form-control"></textarea>
                    <script> CKEDITOR.replace( "kirjoitus" );</script>
                    <input type="hidden" name="id" value="<%=keskustelu.id%>"><br>
            
                    <div class="container" id="buttonbox">        
                        <input class="btn btn-primary" type="submit" value="Vastaa keskusteluun">
                        <a class="btn btn-secondary" href="/">Peruuta</a>
                    </div>
                </form>
            </div>

            <br>
           
        </div>

        <div class="container" id="footer">
            <h6>Ville Johannes Pajala Â© 2019 </h6>
        </div>
        
    </body>
</html>



